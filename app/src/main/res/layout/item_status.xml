<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.myapp.adminside.custom.TfTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Site"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:ftype="bold" />

        <com.myapp.adminside.custom.TfTextView
            android:id="@+id/txtSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web site"
            app:ftype="regular" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/leftView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <com.myapp.adminside.custom.TfTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Total uploaded DL/UL"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:ftype="bold" />

                <com.myapp.adminside.custom.TfTextView
                    android:id="@+id/txtTotalDlUl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="231"
                    app:ftype="regular" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/middleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_toRightOf="@+id/leftView"
                android:orientation="vertical">

                <com.myapp.adminside.custom.TfTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Avg. DL"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:ftype="bold" />

                <com.myapp.adminside.custom.TfTextView
                    android:id="@+id/txtAvgDl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="231"
                    app:ftype="regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_toRightOf="@+id/middleView"
                android:orientation="vertical">

                <com.myapp.adminside.custom.TfTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Avg. UL"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:ftype="bold" />

                <com.myapp.adminside.custom.TfTextView
                    android:id="@+id/txtAvgUl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="231"
                    app:ftype="regular" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>